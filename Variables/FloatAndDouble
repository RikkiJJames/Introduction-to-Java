public class Main {
    public static void main(String[] args) {

        int myIntValue = 5;
        float myFloatValue = 5f;
        double myDoubleValue = 5d;

        System.out.println(myFloatValue);
        System.out.println(myDoubleValue);

        /*Default of floating point number is double
        myFloatValue = 5.25;
        Can cast to a float or use "f" and "d" for float and double respectively.
        */
        myFloatValue = (float) 5.25;
        myDoubleValue = 5.25d;

        System.out.println(myFloatValue);
        System.out.println(myDoubleValue);

        myIntValue = 5 / 3;
        myFloatValue = 5f / 3f;
        // Double is more precise
        myDoubleValue = 5d / 3d;

        System.out.println("Int Value: " + myIntValue);
        System.out.println("Float Value: " + myFloatValue);
        System.out.println("Double Value: " + myDoubleValue);
    }
}
