public class Main {

    public static void main(String [] args){
        int myValue = 10_000;

        int myMinIntValue = Integer.MIN_VALUE;
        int myMaxIntValue = Integer.MAX_VALUE;
        System.out.println("Integer Minimum: " + myMinIntValue);
        System.out.println("Integer Maximum: " + myMaxIntValue);
        // Integer Minimum: -2147483648
        // Integer Maximum: 2147483647

        byte myMinByteValue = Byte.MIN_VALUE;
        byte myMaxByteValue = Byte.MAX_VALUE;
        System.out.println("Byte Minimum: " + myMinByteValue);
        System.out.println("Byte Maximum: " + myMaxByteValue);
        
        // Byte Minimum: -128
        // Byte Maximum: 127

        short myMinShortValue = Short.MIN_VALUE;
        short myMaxShortValue = Short.MAX_VALUE;
        System.out.println("Short Minimum: " + myMinShortValue);
        System.out.println("Short Maximum: " + myMaxShortValue);
        
        // Short Minimum: -32768
        // Short Maximum: 32767

        long myMinLongValue = Long.MIN_VALUE;
        long myMaxLongValue = Long.MAX_VALUE;
        System.out.println("Long Minimum: " + myMinLongValue);
        System.out.println("Long Maximum: " + myMaxLongValue);
        
        // Long Minimum: -9223372036854775808
        // Long Maximum: 9223372036854775807
        
        int myTotal = (myMaxIntValue / 2);

        /* Type in brackets defaults as int
        byte myNewByteValue = (myMinByteValue / 2);
        Can be fixed by casting into a different data type
        */

        byte myNewByteValue = (byte) (myMinByteValue / 2);
        System.out.println(myNewByteValue);
       

    }
}
